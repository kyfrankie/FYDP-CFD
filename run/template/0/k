FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.02;

boundaryField
{
    "(inlet|far_side)"
    {
        type            fixedValue;
        value           $internalField;

        //type            freestream;
        //freestreamValue $internalField;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           0;

        //type            freestream;
        //freestreamValue $internalField;
    }

    "(wing_surface|wing_tip)"
    {
        type            kqRWallFunction;
        value           $internalField;

        //type            kLowReWallFunction;
        //value           $internalField;

        //type            fixedValue;
        //value           1e-12;
    }

    near_side
    {
        type            symmetryPlane;
    }

}


