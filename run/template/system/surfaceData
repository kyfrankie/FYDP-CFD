Description
    Calculates the surface integral of one or more fields on a patch.
\*---------------------------------------------------------------------------*/

type                surfaceRegion;
libs                ("libfieldFunctionObjects.so");
log                 yes;
writeFields         true;
surfaceFormat       raw;
regionType          patch;
name                wing_surface;
operation           none;
fields              ( p U );

